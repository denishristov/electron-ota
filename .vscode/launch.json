{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Back end",
			"runtimeExecutable": "${workspaceFolder}/packages/backend/node_modules/.bin/nodemon",
			"program": "${workspaceFolder}/packages/backend/dist/index.js",
			"envFile": "${workspaceFolder}/packages/backend/.env",
			"restart": true,
			"console": "internalConsole",
			"preLaunchTask": "npm: backend-watch-ts",
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/packages/frontend/src",
			"preLaunchTask": "npm: frontend-start",
		},
	],
}