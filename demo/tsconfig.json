{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"sourceMap": true,
		"jsx": "react",
		"jsxFactory": "createElement",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"resolveJsonModule": false,
		"esModuleInterop": true
	},
}