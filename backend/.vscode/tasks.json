{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch-debug",
			"isBackground": true,
			"problemMatcher": {
                "pattern": {
                    "regexp": "",
                },
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? \\- (Starting compilation in watch mode\\.\\.\\.|File change detected\\. Starting incremental compilation\\.\\.\\.)",
					"endsPattern": "^\\[TypeScript\\]\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)? - Found \\d+ errors\\. Watching for file changes\\.",
				},
			},
		},
	],
}