{
	"compilerOptions": {
		"plugins": [
			{ "transform": "ts-nameof", "type": "raw" }
		],
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2017",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["reflect-metadata"],
		"lib": ["esnext"],
		"resolveJsonModule": true,
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"../shared"
	]
}